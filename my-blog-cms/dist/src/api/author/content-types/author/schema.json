{
    "kind": "collectionType",
    "collectionName": "authors",
    "info": {
        "singularName": "author",
        "pluralName": "authors",
        "displayName": "Author",
        "description": "Content authors"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "maxLength": 100
        },
        "email": {
            "type": "email",
            "required": true
        },
        "bio": {
            "type": "text",
            "maxLength": 1000,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "avatar": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "social_links": {
            "type": "json"
        },
        "blogs": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::blog.blog",
            "mappedBy": "author"
        }
    }
}
