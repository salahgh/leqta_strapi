{
    "kind": "collectionType",
    "collectionName": "faqs",
    "info": {
        "singularName": "faq",
        "pluralName": "faqs",
        "displayName": "FAQ",
        "description": "Frequently Asked Questions"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "question": {
            "type": "string",
            "maxLength": 500,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "answer": {
            "type": "text",
            "maxLength": 2000,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "category": {
            "type": "string",
            "maxLength": 100,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "featured": {
            "type": "boolean",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "default": false
        },
        "order": {
            "type": "integer",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "default": 0
        }
    }
}
