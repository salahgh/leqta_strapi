{
  "collectionName": "components_shared_social_links",
  "info": {
    "displayName": "Social Link",
    "description": "A social media link with platform, URL, and display options"
  },
  "options": {},
  "attributes": {
    "platform": {
      "type": "enumeration",
      "enum": [
        "facebook",
        "twitter",
        "instagram",
        "linkedin",
        "youtube",
        "tiktok",
        "github",
        "whatsapp",
        "telegram",
        "snapchat",
        "pinterest",
        "other"
      ],
      "required": true,
      "default": "other"
    },
    "url": {
      "type": "string",
      "required": true,
      "maxLength": 500,
      "regex": "^https?://"
    },
    "label": {
      "type": "string",
      "maxLength": 100
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
